{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API Departamente",
    "description": "API pentru gestionarea departamentelor"
  },
  "basePath": "/api",
  "paths": {
    "/department": {
      "post": {
        "summary": "Creează un nou departament",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "department": {
                  "type": "string"
                },
                "manager": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Departament creat cu succes",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Cerere incorectă: Lipsesc informații"
          },
          "401": {
            "description": "Neautorizat: Accesul refuzat"
          },
          "500": {
            "description": "Eroare internă de server"
          }
        }
      },
      "get": {
        "summary": "Obține toate departamentele",
        "responses": {
          "200": {
            "description": "Departamentele au fost returnate cu succes",
            "schema": {
              "type": "object",
              "properties": {
                "departments": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "manager": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Neautorizat: Accesul refuzat"
          },
          "500": {
            "description": "Eroare internă de server"
          }
        }
      }
    }
  }
}
